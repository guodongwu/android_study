<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wii.study.lession_6.PopupActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="普通Dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="普通Dialog1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnNormal1"
                android:layout_weight="1" />

            <Button
                android:text="普通Dialog2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnNormal2"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="列表Dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="24sp"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="列表1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnList1"
                android:layout_weight="1" />

            <Button
                android:text="列表2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnList2"
                android:layout_weight="1" />

            <Button
                android:text="列表3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnList3"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="进度Dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="等待ing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnWait1"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnWait2"
                android:layout_weight="1"
                android:text="进度条ing" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="输入Dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnEdit"
                android:layout_weight="1"
                android:text="编辑" />

            <Button
                android:text="自定义"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btndiy"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
